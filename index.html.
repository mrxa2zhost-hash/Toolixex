    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Login Modal
            const loginBtn = document.getElementById('login-btn');
            const loginModal = document.getElementById('login-modal');
            const closeLoginModal = document.getElementById('close-login-modal');
            
            loginBtn.addEventListener('click', function() {
                loginModal.style.display = 'flex';
            });
            
            closeLoginModal.addEventListener('click', function() {
                loginModal.style.display = 'none';
            });
            
            // Premium Modal
            const premiumBtn = document.getElementById('premium-btn');
            const premiumModal = document.getElementById('premium-modal');
            const closePremiumModal = document.getElementById('close-premium-modal');
            
            premiumBtn.addEventListener('click', function() {
                premiumModal.style.display = 'flex';
            });
            
            closePremiumModal.addEventListener('click', function() {
                premiumModal.style.display = 'none';
            });
            
            // Close modals when clicking outside
            window.addEventListener('click', function(event) {
                if (event.target === loginModal) {
                    loginModal.style.display = 'none';
                }
                if (event.target === premiumModal) {
                    premiumModal.style.display = 'none';
                }
            });
            
            // Format selection for video downloader
            const formatOptions = document.querySelectorAll('.option-card[data-format]');
            formatOptions.forEach(option => {
                option.addEventListener('click', function() {
                    formatOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    
                    // Show/hide quality options based on format
                    const qualityOptions = document.getElementById('quality-options');
                    if (this.dataset.format === 'mp3') {
                        qualityOptions.style.display = 'none';
                    } else {
                        qualityOptions.style.display = 'block';
                    }
                });
            });
            
            // Enhance option selection
            const enhanceOptions = document.querySelectorAll('.option-card[data-enhance]');
            enhanceOptions.forEach(option => {
                option.addEventListener('click', function() {
                    enhanceOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                });
            });
            
            // File upload for image enhancer
            const enhancerUpload = document.getElementById('enhancer-upload');
            const enhancerPreview = document.getElementById('enhancer-preview');
            const enhanceBtn = document.getElementById('enhance-btn');
            
            enhancerUpload.addEventListener('click', function() {
                // Simulate file input click
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = 'image/*';
                input.onchange = function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(event) {
                            enhancerPreview.src = event.target.result;
                            enhancerPreview.style.display = 'block';
                            enhanceBtn.disabled = false;
                        };
                        reader.readAsDataURL(file);
                    }
                };
                input.click();
            });
            
            // File upload for image compressor
            const compressorUpload = document.getElementById('compressor-upload');
            const compressorPreview = document.getElementById('compressor-preview');
            const compressBtn = document.getElementById('compress-btn');
            
            compressorUpload.addEventListener('click', function() {
                // Simulate file input click
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = 'image/*';
                input.onchange = function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(event) {
                            compressorPreview.src = event.target.result;
                            compressorPreview.style.display = 'block';
                            compressBtn.disabled = false;
                        };
                        reader.readAsDataURL(file);
                    }
                };
                input.click();
            });
            
            // File upload for PDF splitter
            const pdfUpload = document.getElementById('pdf-upload');
            const pageRange = document.getElementById('page-range');
            const splitPdfBtn = document.getElementById('split-pdf-btn');
            
            pdfUpload.addEventListener('click', function() {
                // Simulate file input click
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = '.pdf';
                input.onchange = function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        pageRange.disabled = false;
                        splitPdfBtn.disabled = false;
                    }
                };
                input.click();
            });
            
            // Download buttons simulation
            const downloadVideoBtn = document.getElementById('download-video-btn');
            const downloadEnhancedBtn = document.getElementById('download-enhanced-btn');
            const downloadCompressedBtn = document.getElementById('download-compressed-btn');
            const downloadPdfBtn = document.getElementById('download-pdf-btn');
            const downloadSplitBtn = document.getElementById('download-split-btn');
            
            // Show ad and then simulate download
            function simulateDownload(button, filename) {
                button.addEventListener('click', function() {
                    // Show ad container
                    const adContainer = document.createElement('div');
                    adContainer.className = 'ad-container';
                    adContainer.innerHTML = `
                        <span class="ad-label">Advertisement</span>
                        <div class="ad-placeholder">
                            App Open Ad Here<br>
                            <button class="btn btn-primary" style="margin-top: 10px;">Continue Download</button>
                        </div>
                    `;
                    
                    // Insert before the button
                    button.parentNode.insertBefore(adContainer, button);
                    
                    // Simulate download after ad
                    adContainer.querySelector('button').addEventListener('click', function() {
                        adContainer.remove();
                        
                        // Show loading
                        const originalText = button.innerHTML;
                        button.innerHTML = '<div class="spinner"></div>';
                        button.disabled = true;
                        
                        // Simulate processing
                        setTimeout(() => {
                            button.innerHTML = originalText;
                            button.disabled = false;
                            
                            // Create and trigger download
                            const a = document.createElement('a');
                            a.href = 'data:application/octet-stream,';
                            a.download = filename;
                            document.body.appendChild(a);
                            a.click();
                            document.body.removeChild(a);
                        }, 2000);
                    });
                });
            }
            
            simulateDownload(downloadVideoBtn, 'downloaded_video.mp4');
            simulateDownload(downloadEnhancedBtn, 'enhanced_image.jpg');
            simulateDownload(downloadCompressedBtn, 'compressed_image.jpg');
            simulateDownload(downloadPdfBtn, 'converted_document.pdf');
            simulateDownload(downloadSplitBtn, 'extracted_pages.pdf');
            
            // Enhance image button
            enhanceBtn.addEventListener('click', function() {
                // Show loading
                const originalText = this.innerHTML;
                this.innerHTML = '<div class="spinner"></div>';
                this.disabled = true;
                
                // Simulate processing
                setTimeout(() => {
                    this.innerHTML = originalText;
                    this.disabled = false;
                    downloadEnhancedBtn.disabled = false;
                    
                    // Show enhanced image (in real app, this would be the processed image)
                    enhancerPreview.style.filter = 'brightness(1.2) contrast(1.1) saturate(1.2)';
                }, 3000);
            });
            
            // Compress image button
            compressBtn.addEventListener('click', function() {
                // Show loading
                const originalText = this.innerHTML;
                this.innerHTML = '<div class="spinner"></div>';
                this.disabled = true;
                
                // Simulate processing
                setTimeout(() => {
                    this.innerHTML = originalText;
                    this.disabled = false;
                    downloadCompressedBtn.disabled = false;
                    
                    // Show success message
                    const compressionLevel = document.getElementById('compression-level').value;
                    alert(`Image compressed successfully! Size reduced by ${compressionLevel}%`);
                }, 3000);
            });
            
            // Generate PDF button
            const generatePdfBtn = document.getElementById('generate-pdf-btn');
            generatePdfBtn.addEventListener('click', function() {
                // Show loading
                const originalText = this.innerHTML;
                this.innerHTML = '<div class="spinner"></div>';
                this.disabled = true;
                
                // Simulate processing
                setTimeout(() => {
                    this.innerHTML = originalText;
                    this.disabled = false;
                    downloadPdfBtn.disabled = false;
                    
                    alert('PDF generated successfully!');
                }, 2000);
            });
            
            // Split PDF button
            splitPdfBtn.addEventListener('click', function() {
                // Show loading
                const originalText = this.innerHTML;
                this.innerHTML = '<div class="spinner"></div>';
                this.disabled = true;
                
                // Simulate processing
                setTimeout(() => {
                    this.innerHTML = originalText;
                    this.disabled = false;
                    downloadSplitBtn.disabled = false;
                    
                    alert('PDF split successfully!');
                }, 2000);
            });
        });
    </script>
</body>
</html>
